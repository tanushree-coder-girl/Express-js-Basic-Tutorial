<h1 class="blog-post-title text-center"> Our blogs post</h1>

<div class="row py-3">
{{#each blogs}}
    <div class="col col-sm-6">
        <div class="p-4 mb-3 bg-light rounded">
            <h4 class="fst-italic"> <a href=blog/{{slug}}> {{this.title}}  </a></h4>
            <p class="mb-0">  {{this.content}}</p>
        </div>
    </div>
{{/each}}
</div>


